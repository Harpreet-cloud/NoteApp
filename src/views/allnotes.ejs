<%- include('partials/header') %>

<div class="container">
  <table class="table table-success table-striped  table-hover mt-5 mb-5">
    <h2 class="mb-4 mt-4"><%= title %></h2>
    <thead class="table table-success ">
      <tr>
        <th scope="col">Note</th>
        <th scope="col">Content</th>
        <th scope="col">Tags</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
<% allnotes.map(note =>{ %>
      <tr class="align-middle">
        <th scope="row"><%= note.title %></th> 
        <td><%=note.content%></td>
        <td><%=note.tags.join(',')%></td>
        <td>
            <a href="/<%= note.slug %>/edit" 
            class="btn btn-dark rounded"
            tabindex="-1"
            type="button">
            Edit</a>
        </td>
        <td>
         <form
            method="POST"
            action="/<%= note._id %>/delete?_method=DELETE"
             class="delete-form"
             data-id="<%= note._id %>"
          >
          <button 
  type="button"
  class="btn btn-dark rounded btn-delete"
  data-bs-toggle="modal"
  data-bs-target="#confirmDeleteModal"
  data-id="<%= note._id %>">
  Delete
</button>
          </form>
        </td>
      </tr>
           <% }) %>
    </tbody>
  </table>
</div>


<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmDeleteLabel">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this note?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
      </div>
    </div>
  </div>
</div>

<script>

  let formToSubmit;

document.querySelectorAll('.btn-delete').forEach(button => {
  button.addEventListener('click', function (event) {
    const clickedButton = event.currentTarget;
    const noteId = clickedButton.dataset.id;
    formToSubmit = document.querySelector(`form[data-id='${noteId}']`);
  });
});

document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
  if (formToSubmit) {
    formToSubmit.submit();
  }
});

</script>




<%- include('partials/footer') %>